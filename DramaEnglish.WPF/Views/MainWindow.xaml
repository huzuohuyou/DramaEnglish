<Window x:Class="DramaEnglish.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DramaEnglish.WPF"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        prism:ViewModelLocator.AutoWireViewModel="True" 
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="900" Width="1366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" LastChildFill="False" >
            <ContentControl  prism:RegionManager.RegionName="HeaderComponet" Margin="0"/>
        </DockPanel>
        <ContentControl  Grid.Row="1" Grid.Column="0" prism:RegionManager.RegionName="NavigationComponet" Margin="0"/>
        <ContentControl  Grid.Row="1" Grid.Column="1" prism:RegionManager.RegionName="Content" Margin="0"/>
    </Grid>
</Window>
