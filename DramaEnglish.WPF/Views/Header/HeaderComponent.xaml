<UserControl x:Class="DramaEnglish.UserInterface.Views.Header.HeaderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DramaEnglish.UserInterface.Views.Header"
             mc:Ignorable="d" 
             Height="50" >
    <Grid  Background="#1890ff" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"></ColumnDefinition>
                <ColumnDefinition  Width="20*"></ColumnDefinition>
                <ColumnDefinition  Width="20*"></ColumnDefinition>
            <ColumnDefinition  Width="20*"></ColumnDefinition>
            <ColumnDefinition  Width="20*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TextBlock}" Grid.Column="0" FontSize="30"  Foreground="White"  >Hello Drama English</TextBlock>
        <TextBlock Style="{StaticResource TextBlock}" Grid.Column="1" FontSize="30"  Foreground="White"  Text="{Binding AlltWordCount}">Total：</TextBlock>
        <TextBlock Style="{StaticResource TextBlock}" Grid.Column="2" FontSize="30"  Foreground="White"  Text="{Binding AlltWordCount}"></TextBlock>
        <TextBlock Style="{StaticResource TextBlock}" Grid.Column="3" FontSize="30"  Foreground="White"  Text="{Binding AlltWordCount}">Learned</TextBlock>
        <TextBlock Style="{StaticResource TextBlock}" Grid.Column="4" FontSize="30"  Foreground="White"   Text="{Binding KnowWordCount}"></TextBlock>

        </Grid>

</UserControl>
